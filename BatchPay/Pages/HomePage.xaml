<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="BatchPay.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:BatchPay.ViewModels"
    Title="BatchPay">

    <ContentPage.BindingContext>
        <viewmodels:HomeViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="24" RowDefinitions="Auto,*,Auto" RowSpacing="24">
        <VerticalStackLayout Spacing="16">
            <Label Text="Forside" FontSize="28" FontAttributes="Bold" />
            <Label Text="VÃ¦lg en funktion" />
        </VerticalStackLayout>

        <VerticalStackLayout Grid.Row="1" Spacing="14">
            <!-- -->
            <Button Text="Mine venner" Command="{Binding GoToFriendsCommand}" />
            <Button Text="Gruppebetaling" Command="{Binding GoToGroupPaymentCommand}" />
            <Button Text="Notifikationer" Command="{Binding GoToNotificationsCommand}" />
        </VerticalStackLayout>

        <!-- Lidt POC-dummy-info fra VM -->
        <Label Grid.Row="2" Text="{Binding FooterText}" FontSize="12" Opacity="0.7" HorizontalOptions="Center" />
    </Grid>
</ContentPage>
