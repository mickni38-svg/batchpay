<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Sider -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource ColorBg}" />
    </Style>

    <!-- Labels -->
    <Style TargetType="Label" x:Key="TitleLabel">
        <Setter Property="TextColor" Value="{StaticResource ColorText}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Label" x:Key="SubtleLabel">
        <Setter Property="TextColor" Value="{StaticResource ColorMuted}" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style TargetType="Frame" x:Key="RowFrame">
        <Setter Property="BackgroundColor" Value="{StaticResource ColorRow}" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="Margin" Value="8,6,8,0" />
    </Style>

    <Style TargetType="Frame" x:Key="AvatarFrame">
        <Setter Property="WidthRequest" Value="46" />
        <Setter Property="HeightRequest" Value="46" />
        <Setter Property="CornerRadius" Value="23" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="BackgroundColor" Value="{StaticResource ColorRowAlt}" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Rund rød knap i højre side -->
    <Style TargetType="Button" x:Key="RoundDangerButton">
        <Setter Property="WidthRequest" Value="38" />
        <Setter Property="HeightRequest" Value="38" />
        <Setter Property="CornerRadius" Value="19" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BackgroundColor" Value="{StaticResource ColorDanger}" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- “Pill” badge (fx NEW) -->
    <Style TargetType="Frame" x:Key="Pill">
        <Setter Property="Padding" Value="6,2" />
        <Setter Property="BackgroundColor" Value="{StaticResource ColorPanel}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>
</ResourceDictionary>
