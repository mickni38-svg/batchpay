<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Base -->
    <Color x:Key="ColorBg">#081216</Color>
    <Color x:Key="ColorPanel">#0B181B</Color>
    <!-- top search + toolbar -->
    <Color x:Key="ColorRow">#0D2022</Color>
    <!-- list-row -->
    <Color x:Key="ColorRowAlt">#0A1517</Color>
    <!-- “divider” bånd -->
    <Color x:Key="ColorLine">#14323A</Color>

    <!-- Text -->
    <Color x:Key="ColorText">#E8F7F4</Color>
    <Color x:Key="ColorMuted">#9FB8B4</Color>
    <Color x:Key="ColorMint">#7DE2CE</Color>
    <!-- svag mint ligesom i billedet -->

    <!-- Accenter -->
    <Color x:Key="ColorAccent">#22C55E</Color>
    <!-- grøn -->
    <Color x:Key="ColorDanger">#EF4444</Color>
    <!-- rød knap -->
</ResourceDictionary>
